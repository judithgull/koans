{
  "version": "1.6.2",
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"]
  },
  "filesGlob": ["./**/*.ts", "!./node_modules/**/*.ts"],
  "exclude": ["node_modules", "build", "lib", "dist"]
}
